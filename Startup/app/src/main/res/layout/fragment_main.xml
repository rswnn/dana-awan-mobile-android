<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.MainFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/itemswipetorefresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="30pt"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:foregroundGravity="center"
        android:minHeight="100dp"
        android:textAlignment="gravity">

        <ImageView
            android:layout_marginTop="5pt"
            android:id="@+id/imageView3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="0"
            android:src="@drawable/akun" />

        <LinearLayout
            android:layout_marginTop="5pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35pt"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Kamu"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Kamu"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="110pt"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quicksandbold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quicksandbold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quicksandbold"
                android:textSize="18sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ivTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:layout_margin="5pt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tf" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:layout_margin="5pt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWithdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/withdraw" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>